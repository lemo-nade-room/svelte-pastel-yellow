{
	"mcpServers": {
		"playwright": {
			"command": "bunx",
			"args": [
				"@playwright/mcp@latest",
				"--browser",
				"chromium",
				"--user-data-dir",
				"./.mcp-profile",
				"--headless",
				"--isolated",
				"--no-sandbox"
			]
		},
		"mcp-svelte-docs": {
			"command": "bunx",
			"args": ["-y", "mcp-svelte-docs"]
		}
	}
}
